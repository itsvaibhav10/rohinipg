<%- include('./include/header.ejs')%>
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Notification Title:- <%=notification.title%>
            </h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <form action="/admin/send-notification" method="post">
                <div class="form-group">
                    <label for="userType">User Type</label>
                    <select name="userType" id="userType" class="form-control" required>
                        <option value="provider">provider</option>
                        <option value="tenant">tenant</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="paidType">Paid Type</label>
                    <select name="paidType" id="paidType" class="form-control">
                        <option value="paid">paid</option>
                        <option value="free">free</option>
                    </select>
                    <div class="form-control-feedback"><small>Note:- <code>Works For Provider Only</code>
                        </small>
                    </div>
                </div>
                <input type="hidden" name="notificationId" value="<%=notification._id%>">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <button type="submit" class="btn btn-success"><i class="fas fa-paper-plane"></i> Send</button>
                <button type="reset" class="btn btn-danger"> Cancel</button>
            </form>
        </div>
    </div>


    <%- include('./include/footer.ejs')%>
        <!-- jQuery 3 -->
        <script src="/admin/assets/vendor_components/jquery-3.3.1/jquery-3.3.1.js"></script>

