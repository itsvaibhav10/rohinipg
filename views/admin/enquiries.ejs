        <script src="/admin/js/utility.js"></script>

        <script>
            const changeDateFormat = (date) =>
                date.getFullYear() +
                '-' +
                (date.getMonth() + 1).toString().padStart(2, '0') +
                '-' +
                date.getDate();
        </script>
