<%- include('./include/header.ejs')%>
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Enquires Table</h3>

        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">
                <table id="example" class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
                    <thead>
                        <tr>
                            <th>Actions</th>
                            <th>Status</th>
                            <th>Name</th>
                            <th>Mobile</th>
                            <th>Property</th>
                            <th>Address</th>
                            <th>Pincode</th>
                            <th>Generated On</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%enquiries.forEach((enquiry)=>{%>
                            <tr>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a href="/admin/user/<%=enquiry.userId._id%>" class="btn btn-purple btn-sm mb-1"
                                            title="View Details"><i class="far fa-eye"></i> User</a>
                                        <a href="/property/<%=enquiry.propId._id%>" class="btn btn-dark btn-sm mb-1"
                                            title="Edit Details"><i class="far fa-eye"></i> Property</a>
                                        <a href="/admin/enquiry-status/<%=enquiry._id%>"
                                            class="btn <%=!enquiry.status?'btn-success':'btn-danger'%> btn-sm mb-1"
                                            title="Edit Details"><i class="fas fa-check-circle"></i> Status</a>

                                    </div>
                                </td>
                                <%if(!enquiry.status){%>
                                    <td class="bg-danger text-white">
                                        Pending
                                    </td>

                                    <%}else{%>
                                        <td class="bg-success text-white">
                                            Resolved
                                        </td>
                                        <%}%>
                                            <td>
                                                <%=enquiry.userId.firstName %>
                                            </td>
                                            <td>
                                                <%=enquiry.userId.mobile%>
                                            </td>
                                            <td>
                                                <%=enquiry.propId.title%>
                                            </td>
                                            <td>
                                                <%=`${enquiry.propId.houseNo} ${enquiry.propId.street}`%>
                                            </td>

                                            <td>
                                                <%=enquiry.propId.pincode%>
                                            </td>


                                            <td>
                                                <%=enquiry.createdAt%>
                                            </td>
                            </tr>
                            <%})%>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.box-body -->
    </div>





    <%- include('./include/footer.ejs')%>
        <!-- jQuery 3 -->
        <script src="/admin/assets/vendor_components/jquery-3.3.1/jquery-3.3.1.js"></script>

        <!-- popper -->
        <script src="/admin/assets/vendor_components/popper/dist/popper.min.js"></script>

        <!-- Bootstrap 4.0-->
        <script src="/admin/assets/vendor_components/bootstrap/dist/js/bootstrap.min.js"></script>

