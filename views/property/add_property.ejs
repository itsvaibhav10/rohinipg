<%- include('../include/header'); %>
    <link rel="stylesheet" href="/assets/css/wizard.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    </head>

    <body class="">
        <%- include('../include/navbar'); %>

            <div class="content-area submit-property">
                <div class="container">
                    <div class="clearfix">
                        <div class="wizard-container">
                            <div class="wizard-card ct-wizard-orange" id="wizardProperty">
                                <form action="<%=editing?'/edit-property':'/add-property'%>" method="post"
                                    enctype="multipart/form-data">
                                    <div class="wizard-header">
                                        <h3>
                                            <b>Submit</b> YOUR PROPERTY <br>
                                        </h3>
                                    </div>

                                    <ul>
                                        <li><a href="#step1" data-toggle="tab">Property Details </a></li>
                                        <li><a href="#step2" data-toggle="tab">Property Amenities </a></li>
                                    </ul>

                                    <div class="tab-content">
                                        <div class="tab-pane" id="step1">
                                            <h4 class="info-text"> Let's start with the basic information</h4>
                                            <div class="row ">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="title">Title
                                                            <small>(required)</small></label>
                                                        <input name="title" id="title" type="text" class="form-control"
                                                            placeholder="Super villa ..." value="<%=property.title%>"
                                                            required>
                                                    </div>
                                                </div>

                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="description">Description :</label>
                                                        <textarea name="description" id="description" rows="5"
                                                            class="form-control" value=""
                                                            required><%=property.description%></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label for="houseNo">House no
                                                            <small>(required)</small></label>
                                                        <input name="houseNo" id="houseNo" type="text"
                                                            class="form-control" placeholder="1234 main st"
                                                            value="<%=property.houseNo%>" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-8">
                                                    <div class="form-group">
                                                        <label for="street">Street,locality </label>
                                                        <input name="street" id="street" type="text"
                                                            class="form-control" placeholder="Aparment, Studio or Floor"
                                                            value="<%=property.street%>" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label for="city">City
                                                            <small>(required)</small></label>
                                                        <input name="city" id="city" type="text" class="form-control"
                                                            placeholder="City" value="<%=property.city%>" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label for="state">State
                                                            <small>(required)</small></label>
                                                        <select name="state" id="state" placeholder="near land mark"
                                                            class="selectpicker" data-live-search="true"
                                                            data-live-search-style="begins" required>
                                                            <%if(editing){%>
                                                                <option selected value="<%=property.state%>">
                                                                    <%=property.state%>
                                                                </option>
                                                                <%}else{%>
                                                                    <option selected disabled value="">Choose...
                                                                    </option>

                                                                    <%}%>
                                                                        <option>Andhra Pradesh</option>
                                                                        <option>Arunachal Pradesh</option>
                                                                        <option>Assam</option>
                                                                        <option>Andaman and Nicobar Islands</option>
                                                                        <option>Bihar</option>
                                                                        <option>Chandigarh</option>
                                                                        <option>Chhattisgarh</option>
                                                                        <option>Dadra and Nagar Haveli and Daman and Diu
                                                                        </option>
                                                                        <option>Delhi</option>
                                                                        <option>Goa</option>
                                                                        <option>Gujrat</option>
                                                                        <option>Haryana</option>
                                                                        <option>Himachal Pradesh</option>
                                                                        <option>Jharkhand</option>
                                                                        <option>kerela</option>
                                                                        <option>Madhya pradesh</option>
                                                                        <option>Maharastra</option>
                                                                        <option>Manipur</option>
                                                                        <option>Meghalaya</option>
                                                                        <option>Mizoram</option>
                                                                        <option>Nagaland</option>
                                                                        <option>Odisha</option>
                                                                        <option>Punjab</option>
                                                                        <option>Rajasthan</option>
                                                                        <option>Sikkim</option>
                                                                        <option>Tamil Nadu</option>
                                                                        <option>Telangana</option>
                                                                        <option>Tripura</option>
                                                                        <option>Uttar Pradesh</option>
                                                                        <option>Uttarakhand</option>
                                                                        <option>West Bengal</option>
                                                                        <option>Jammu and Kashmir</option>
                                                                        <option>Ladakh</option>
                                                                        <option>Lakshadweep</option>
                                                                        <option>Puducherry</option>

                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label for="pincode">Pincode
                                                            <small>(required)</small></label>
                                                        <input name="pincode" id="pincode" type="number"
                                                            class="form-control" placeholder="Pincode"
                                                            value="<%=property.pincode%>" required>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <!--  End step 1 -->

                                        <div class="tab-pane" id="step2">
                                            <h4 class="info-text"> How much your Property is Beautiful ? </h4>
                                            <div class="row">
                                                <% master.forEach(m=> { %>
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <label for="<%=m.name%>" class="text-capitalize">
                                                                <%=m.name%> :
                                                            </label>
                                                            <select id="<%=m.name%>" name="<%=m.name%>"
                                                                class="selectpicker form-control" required
                                                                style="color:#000;">
                                                                <% if(editing){%>
                                                                    <% const value=m.name %>
                                                                        <option selected value="<%=property[value]%>">
                                                                            <%=property[value]%>
                                                                        </option>
                                                                        <%}%>
                                                                            <%m.items.forEach(item=>{%>
                                                                                <option value="<%=item%>"
                                                                                    style="color:#000;">
                                                                                    <%=item%>
                                                                                </option>
                                                                                <%})%>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                                        <div class="col-sm-12 padding-top-15">
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <label for="seats">Total Seats Available
                                                                        :</label>
                                                                    <input type="text" name="seats" id="seats"
                                                                        class="form-control"
                                                                        value="<%=editing?property.seats:''%>"
                                                                        placeholder="No Of Seats " required>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <label for="rent">Rent Per Month/Bed in
                                                                        (INR)
                                                                        :</label>
                                                                    <input type="text" class="span2"
                                                                        data-slider-min="500" data-slider-max="10000"
                                                                        data-slider-step="10"
                                                                        data-slider-value="[<%=editing?property.rent:'1000,5000'%>]"
                                                                        id="min-baths" name="rent"
                                                                        value="<%=editing?property.rent:'1000,5000'%>"><br />
                                                                    <b class="pull-left color">500</b>
                                                                    <b class="pull-right color">10000</b>
                                                                </div>
                                                            </div>
                                                            <!-- <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <label for="propertyBathrooms">No Of Bathrooms
                                                                        :</label>
                                                                    <input type="text" name="propertyBathrooms"
                                                                        id="propertyBathrooms"
                                                                        value="<%=editing?property.bathrooms:''%>">
                                                                </div>
                                                            </div> -->
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <label for="area">Area in (sq Feet)
                                                                        :</label>
                                                                    <input type="text" name="area" id="area"
                                                                        class="form-control"
                                                                        value="<%=editing?property.area:''%>" required>
                                                                </div>
                                                            </div>
                                                        </div>
                                            </div>
                                        </div>
                                        <!--  End step 2 -->
                                    </div>
                                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                    <%if(editing){%>
                                        <input type="hidden" name="propId" value="<%=propId%>">
                                        <%}%>
                                            <div class="wizard-footer">
                                                <div class="pull-right">
                                                    <input type='button' class='btn btn-next btn-primary' name='next'
                                                        value='Next' />
                                                    <button type="submit"
                                                        class='btn btn-finish btn-primary '>Finish</button>
                                                </div>

                                                <div class="pull-left">
                                                    <input type='button' class='btn btn-previous btn-default'
                                                        name='previous' value='Previous' />
                                                </div>
                                                <div class="clearfix"></div>
                                            </div>
                                </form>
                            </div>
                            <!-- End submit form -->
                        </div>
                    </div>
                </div>
            </div>

            <script src="/assets/js/vendor/modernizr-2.6.2.min.js"></script>
            <script src="/assets/js//jquery-1.10.2.min.js"></script>
            <script src="/bootstrap/js/bootstrap.min.js"></script>
            <script src="/assets/js/bootstrap-select.min.js"></script>
            <script src="/assets/js/bootstrap-hover-dropdown.js"></script>
            <script src="/assets/js/easypiechart.min.js"></script>
