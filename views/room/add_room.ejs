    <body class="">
        <%- include('../include/navbar'); %>

            <div class="content-area submit-property">
                <div class="container">
                    <div class="clearfix">
                        <div class="wizard-container">
                            <div class="wizard-card ct-wizard-orange" id="wizardProperty">
                                <form action="<%=editing?'/edit-property':'/add-property'%>" method="post"
                                    enctype="multipart/form-data">
                                    <div class="wizard-header">
                                        <h3>
                                            <b>Add Room</b> To YOUR PROPERTY <br>
                                        </h3>
                                    </div>

                                    <ul>
                                        <li><a href="#step1" data-toggle="tab">Room Details </a></li>
                                    </ul>

                                    <div class="tab-content">


                                        <div class="tab-pane" id="step1">
                                            <h4 class="info-text"> How much your Property is Beautiful ? </h4>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="title">Title
                                                            <small>(required)</small></label>
                                                        <input name="title" id="title" type="text" class="form-control"
                                                            placeholder="Super villa ..." value="<%=room.title%>"
                                                            required>
                                                    </div>
                                                </div>
                                                <% master.forEach(m=> { %>
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <label for="<%=m.name%>" class="text-capitalize">
                                                                <%=m.name%> :
                                                            </label>
                                                            <select id="<%=m.name%>" name="<%=m.name%>"
                                                                class="selectpicker form-control" required
                                                                style="color:#000;">
                                                                <% if(editing){%>
                                                                    <% const value=m.name %>
                                                                        <option selected value="<%=room[value]%>">
                                                                            <%=room[value]%>
                                                                        </option>
                                                                        <%}%>
                                                                            <%m.items.forEach(item=>{%>
                                                                                <option value="<%=item%>"
                                                                                    style="color:#000;">
                                                                                    <%=item%>
                                                                                </option>
                                                                                <%})%>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                                        <div class="col-sm-3">
                                                            <div class="form-group">
                                                                <label for="rent">Rent Per Month/Bed in
                                                                    (INR)
                                                                    :</label>
                                                                <input name="rent" id="rent" type="text"
                                                                    class="form-control" placeholder="Super villa ..."
                                                                    value="<%=room.rent%>" required>
                                                            </div>
                                                        </div>
                                            </div>
                                        </div>
                                        <!--  End step 2 -->
                                    </div>
                                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                    <%if(editing){%>
                                        <input type="hidden" name="propId" value="<%=propId%>">
                                        <%}%>
                                            <div class="wizard-footer">
                                                <div class="pull-right">
                                                    <input type='button' class='btn btn-next btn-primary' name='next'
                                                        value='Next' />
                                                    <button type="submit"
                                                        class='btn btn-finish btn-primary '>Finish</button>
                                                </div>

                                                <div class="pull-left">
                                                    <input type='button' class='btn btn-previous btn-default'
                                                        name='previous' value='Previous' />
                                                </div>
                                                <div class="clearfix"></div>
                                            </div>
                                </form>
                            </div>
                            <!-- End submit form -->
                        </div>
                    </div>
                </div>
            </div>

